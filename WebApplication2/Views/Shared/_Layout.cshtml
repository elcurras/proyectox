<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TuServicio</title>
    <!-- Solo una versión de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Fuentes -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
        <!-- Precargar imágenes del slider -->
        <link rel="preload" href="/img/slider/Panoramica1.JPG" as="image">
        <link rel="preload" href="/img/slider/Panoramica2.JPG" as="image">
    <link rel="preload" href="/img/slider/Panoramica3.JPG" as="image">

    <link rel="preload" href="/img/slider/Panoramica4.JPG" as="image">

   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <!-- Logo (10%) -->
                <div class="col-2 col-lg-1">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <span style="font-family: 'Montserrat', sans-serif; font-weight: 600;">LOGO</span>
                    </a>
                </div>

                <!-- Menú principal (70%) -->
                <div class="col-8 col-lg-7">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarMain">
                        <ul class="navbar-nav w-100 justify-content-between">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>

                            <!-- Menú Minecraft -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="minecraftDropdown" data-bs-toggle="dropdown">
                                    Minecraft
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="minecraftDropdown">
                                    <li><a class="dropdown-item" asp-controller="Minecraft" asp-action="Hosting">Hosting</a></li>
                                    <li><a class="dropdown-item" asp-controller="Minecraft" asp-action="PluginsPersonalizados">Plugins</a></li>
                                </ul>
                            </li>

                            <!-- Menú Discord -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="discordDropdown" data-bs-toggle="dropdown">
                                    Discord
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="discordDropdown">
                                    <li><a class="dropdown-item" asp-controller="Discord" asp-action="BotsPersonalizados">Bots</a></li>
                                    <li><a class="dropdown-item" asp-controller="Discord" asp-action="ConfigServidores">Configuración</a></li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Serie" asp-action="Index">Series</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Contacto (20%) -->
                <div class="col-2 col-lg-4 text-end">
                    <a class="btn btn-outline-light" asp-controller="Contacto" asp-action="Index">Contacto</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TuServicio
        </div>
    </footer>

    <!-- Scripts (IMPORTANTE: ORDEN CORRECTO) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>